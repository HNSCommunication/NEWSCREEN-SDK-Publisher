<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true">

    <ProgressBar
        android:id="@+id/newscreen_webView_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.tnplanet.newscreen_sdk.CustomFunction.NewscreenSwipeRefreshLayout
        android:id="@+id/newscreen_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/newscreen_webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"></WebView>
    </com.tnplanet.newscreen_sdk.CustomFunction.NewscreenSwipeRefreshLayout>
</LinearLayout>
